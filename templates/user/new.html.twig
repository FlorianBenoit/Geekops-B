{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Create new User</h1>
        {{ form_start(form, {'attr': {'class': 'mb-4'}}) }}
        <div class="mb-3">
            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.mail, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.avatar, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ include('user/_form.html.twig') }}
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">back to list</a>
        {{ form_end(form) }}
    </div>
{% endblock %}