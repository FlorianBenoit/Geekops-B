{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Type Index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.name }}</td>
                        <td>
                            <a href="{{ path('app_type_show', {'id': type.id}) }}" class="btn btn-primary btn-sm">Show</a>
                            <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-danger btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_type_new') }}" class="btn btn-success">Create New</a>
    </div>
{% endblock %}