{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Category</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Name</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-success">Edit</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}