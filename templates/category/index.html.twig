{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
 <div class="container mt-5">
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary" >Show</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-danger" >Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-succes" >Create new</a>
{% endblock %}

